---
import "../styles/global.css";
import CartToggleButton from "../components/CartToggleButton";
import TripSidebar from "../components/TripSidebar";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Explore the best destinations across Northeast India" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
    <nav class="border-b border-gray-200 bg-white">
      <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-emerald-700">Northeast Explorer</a>
          <div class="flex items-center gap-6 text-sm font-medium text-gray-600">
            <a href="/" class="hover:text-emerald-700">All Places</a>
            <a href="/states" class="hover:text-emerald-700">By State</a>
            <a href="/plan" class="hover:text-emerald-700">Plan by Hub</a>
            <a href="/map" class="hover:text-emerald-700">Map</a>
            <CartToggleButton client:load />
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="mt-16 border-t border-gray-200 bg-white py-8">
      <div class="mx-auto max-w-7xl px-4 text-center text-sm text-gray-500 sm:px-6 lg:px-8">
        Northeast Explorer &mdash; Your guide to Northeast India's best destinations.
      </div>
    </footer>

    <TripSidebar client:load />
  </body>
</html>
