---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const allPlaces = await getCollection("places");
const states = [...new Set(allPlaces.map((p) => p.data.location.state))].sort();
---

<BaseLayout title="Northeast Explorer â€” Discover Northeast India">
  <div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
    <div class="mb-10">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">
        Explore Northeast India
      </h1>
      <p class="mt-2 text-lg text-gray-600">
        {allPlaces.length} destinations across {states.length} states
      </p>
    </div>

    <!-- State filter pills -->
    <div class="mb-8 flex flex-wrap gap-2">
      {states.map((state) => (
        <a
          href={`/states/${state.toLowerCase().replace(/\s+/g, "-")}`}
          class="rounded-full bg-emerald-50 px-4 py-1.5 text-sm font-medium text-emerald-700 hover:bg-emerald-100"
        >
          {state}
          <span class="ml-1 text-emerald-500">
            ({allPlaces.filter((p) => p.data.location.state === state).length})
          </span>
        </a>
      ))}
    </div>

    <!-- Places grid -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {allPlaces.map((place) => (
        <a
          href={`/places/${place.data.id}`}
          class="group rounded-xl border border-gray-200 bg-white p-5 shadow-sm transition hover:shadow-md"
        >
          <div class="mb-3 flex items-start justify-between">
            <span class="rounded-md bg-emerald-50 px-2 py-0.5 text-xs font-medium text-emerald-700">
              {place.data.category}
            </span>
            {place.data.ratings.google_rating && (
              <span class="flex items-center gap-1 text-sm text-amber-600">
                <span>&#9733;</span> {place.data.ratings.google_rating}
              </span>
            )}
          </div>
          <h2 class="text-lg font-semibold text-gray-900 group-hover:text-emerald-700">
            {place.data.name}
          </h2>
          <p class="mt-1 text-sm text-gray-500">
            {place.data.location.state}
          </p>
          <div class="mt-3 flex flex-wrap gap-1">
            {place.data.tags.slice(0, 3).map((tag) => (
              <span class="rounded bg-gray-100 px-2 py-0.5 text-xs text-gray-600">
                {tag}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
